# Docker Compose project name (locked to prevent volume namespace changes on dir rename)
COMPOSE_PROJECT_NAME=sumplatform

# =============================================================================
# Database (Postgres) - optional, falls back to SQLite if not configured
# =============================================================================
DJANGO_DB_NAME=sum_db
DJANGO_DB_USER=sum_user
DJANGO_DB_PASSWORD=sum_password
DJANGO_DB_HOST=localhost
DJANGO_DB_PORT=5432

# =============================================================================
# Email Configuration (SMTP) - optional, falls back to console backend
# =============================================================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@example.com

# Lead notification recipient (required for email notifications)
# LEAD_NOTIFICATION_EMAIL=leads@example.com

# =============================================================================
# Celery (async tasks) - optional, falls back to in-memory eager mode
# =============================================================================
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# Zapier Integration - optional, per-site config in Wagtail SiteSettings
# =============================================================================
# ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/...

# =============================================================================
# Observability (Sentry) - optional, disabled if SENTRY_DSN not set
# =============================================================================
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# SENTRY_ENVIRONMENT=development
# SENTRY_TRACES_SAMPLE_RATE=0.0

# =============================================================================
# Logging - optional, defaults to INFO level with auto-detected format
# =============================================================================
# LOG_LEVEL=INFO
# LOG_FORMAT=auto  # "auto", "json", or leave blank for console-friendly format

# =============================================================================
# Build/Version info (typically set by CI) - optional
# =============================================================================
# GIT_SHA=abc123
# BUILD_ID=build-123
# RELEASE=v0.1.0
